<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="patronBackBrush"
        EndPoint="1,1" StartPoint="0,0">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="#FF363636" Offset="1"/>
    </LinearGradientBrush>

    <!-- 边框背景色 -->
    <SolidColorBrush x:Key="patronBorder" Color="Black"/>

    <!-- 名称前景色。比正文前景色轻一些 -->
    <SolidColorBrush x:Key="patronNameText" Color="Gray"/>

    <!-- 正文前景色 -->
    <SolidColorBrush x:Key="patronValueText" Color="#dddddd"/>

    <!-- 正文前景色，较明显 -->
    <SolidColorBrush x:Key="patronHilightText" Color="#eeeeee"/>

</ResourceDictionary>