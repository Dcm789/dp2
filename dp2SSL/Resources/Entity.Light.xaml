<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="entityBackBrush"
            EndPoint="1,1" StartPoint="0,0">
        <GradientStop Color="LightGray" Offset="0"/>
        <GradientStop Color="White" Offset="1"/>
    </LinearGradientBrush>

    <!-- Title 前景色 -->
    <SolidColorBrush x:Key="entityTitleText" Color="#111111"/>

    <!-- 借阅信息 前景色 -->
    <SolidColorBrush x:Key="entityBorrowInfoTextSmall" Color="#222222"/>
    <SolidColorBrush x:Key="entityBorrowInfoTextLarge" Color="#333333"/>

    <!-- 馆藏地点 前景色 -->
    <SolidColorBrush x:Key="entityLocation" Color="#333333"/>

    <!-- 当前地点 前景色 -->
    <SolidColorBrush x:Key="entityCurrentLocation" Color="#333333"/>

</ResourceDictionary>