<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="entityBackBrush"
            EndPoint="1,1" StartPoint="0,0">
        <GradientStop Color="Black" Offset="0"/>
        <GradientStop Color="#FF363636" Offset="1"/>
    </LinearGradientBrush>

    <!-- Title 前景色 -->
    <SolidColorBrush x:Key="entityTitleText" Color="LightGray"/>

    <!-- 借阅信息 前景色 -->
    <SolidColorBrush x:Key="entityBorrowInfoTextSmall" Color="LightGray"/>
    <SolidColorBrush x:Key="entityBorrowInfoTextLarge" Color="DarkGray"/>

    <!-- 馆藏地点 前景色 -->
    <SolidColorBrush x:Key="entityLocation" Color="DarkGray"/>

    <!-- 当前地点 前景色 -->
    <SolidColorBrush x:Key="entityCurrentLocation" Color="DarkGray"/>

</ResourceDictionary>