<UserControl x:Class="dp2SSL.FingerprintVideoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dp2SSL"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" VerticalAlignment="Bottom">
        <Grid>
            <Image Name="photo"/>
            <Canvas>
                <Polyline
                        Name="lines"
    Points=""
    Stroke="GreenYellow"
    StrokeThickness="8" >
                    <Polyline.RenderTransform>
                        <ScaleTransform CenterX="0" CenterY="0" ScaleX="1" ScaleY="1" />
                    </Polyline.RenderTransform>
                </Polyline>
            </Canvas>
        </Grid>
        <TextBlock Name="quality"
                   ToolTip="指纹质量"
                   Foreground="{StaticResource normalForeground}" Background="{StaticResource normalBackground}"
                   FontSize="16" HorizontalAlignment="Center" DockPanel.Dock="Bottom"></TextBlock>
    </StackPanel>
</UserControl>
